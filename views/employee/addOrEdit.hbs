<div class="container">
    <div class="row">
 <div class="col-sm-2"></div>
 <div class="col-sm-6">

<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST"  autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Job Title</label>
        <input type="text" class="form-control" name="fullName" placeholder="Job title" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
 <div class="form-row">
        <div class="form-group col-md-6">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{employee.email}}">
        <div class="text-danger">
            {{employee.emailError}}</div>
            </div>
                 <div class="form-group col-md-6">
        <label>Experiance</label>
        <input type="text" class="form-control" name="experinace" placeholder="Experinace" value="{{employee.experinace}}">
        <div class="text-danger">
            {{employee.emailError}}</div>



    </div> 
     </div> 
    <div class="form-row">
        <div class="form-group col-md-6">
              <label>Job Location</label>
       <select id='{{employee.location}}' name ="location" required style='height: 42px; position: relative; color:white; font-family:Arial, FontAwesome; width:200px; background-color: DodgerBlue; font-size: 14px '>
          <option value='{{employee.location}}'  style='color:white;'>&#xf039; &nbsp; {{employee.location}}</option>
          <option value='gurgaon' name ="gurgaon" style='color:white;'>&#xf00c; &nbsp; Gurgaon</option>
          <option value='delhi' name ="delhi" style='color:white;'>&#xf04c; &nbsp; Delhi</option>
          <option value='banglore' name ="banglore" style='color:white;'>&#xf023; &nbsp; Banglore</option>
           <option value='pune' name ="pune" style='color:white;'>&#xf023; &nbsp; Pune</option>
        </select>
    
    </div> 
  
     
        <div class="form-group col-md-6">
              <label>Salary Offered</label>
       <select id="{{employee.salary}}"  name ="salary" required style='height: 42px; position: relative; color:white; font-family:Arial, FontAwesome; width:200px; background-color: DodgerBlue; font-size: 14px'>
          <option value='{{employee.salary}}'  style='color:white;'>&#xf039; &nbsp;{{employee.salary}} </option>
          <option value='2lakh-4lakh' name ="2lakh-4lakh" style='color:white;'>&#xf00c; &nbsp; 2lakh-4lakh </option>
          <option value='3lakh-5lakh'  name ="3lakh-5lakh" {{employee.salary}}        style='color:white;'>&#xf04c; &nbsp; 3lakh-6lakh </option>
          <option value='6lakh-10lakh' name ="6lakh-10lakh" value="{{employee.salary}}" style='color:white;'>&#xf023; &nbsp; 6lakh-10lakh </option>
  </select>
    
    </div> 
     </div> 

    
   
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>Company</label>
            <input type="text" class="form-control" name="company" placeholder="Company Name" value="{{employee.company}}">
        </div>
    </div>
    
     <div class="form-group">
        
<input type="date" id="meeting-time" 
       name="time" value="mm-dd-yyyy hh:mm"
       min="1:00" max="12:00" required></div>
   <div class="form-group">
      <label>Short Description</label>
  

    <textarea type="comment" id="comment"  maxlength = "226" rows = "5" cols = "40" placeholder="Write A short Description" class="form-control"  name="comment" required>{{employee.comment}}</textarea>
    </div>

     <div class="form-group">
      <label>Detailed JD</label>
  

    <textarea type="comment" id="comment"  style="height:700px" placeholder="Write A Detailed Description" class="form-control"  name="longcomment" required>{{employee.longcomment}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form></div></div></div>